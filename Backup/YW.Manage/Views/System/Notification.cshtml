            if (searchtype == 1) {
                getList(pageindex, pagesize);
            } else {
                getList(pageindex, pagesize);
            }
        }

        function getList(pageindex, pagesize) {
            $.ajax({
                url: "/System/GetNotification",
                type: "Post",
                data: "{'pageindex':'" + pageindex + "','pagesize':'" + pagesize + "'}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function(data) {
                    if (data) {
                        if (data.Result == 1) {
